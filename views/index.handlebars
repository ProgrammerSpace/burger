<h1>Burgers!</h1>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger_devour devour=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="bgr" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>