<div class="container">
    <div class="row text-center">
        <div class="col-12">
            <h1>Burgers!</h1>
        </div>
        <div class="col-12">
            <img src="/assets/images/burger.jpg" alt="burgerImg">
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <hr>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger_devour devour=true}}
                {{/unless}}
                {{/each}}
            </ul>

            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="bgr" name="name">
                </div>

                <button id="add" type="submit">Add Burger</button>
            </form>
            <br>
        </div>
        <div class="col-5 text-center">
            <hr>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> done devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>