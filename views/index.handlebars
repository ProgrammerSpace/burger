<div class="container">
    <div class="row">
        <h1>Burgers!</h1>
    </div>
    <div class="row">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger_devour devour=true}}
                {{/unless}}
                {{/each}}
            </ul>

            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="bgr" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-6 text-center">
            check
        </div>
    </div>
</div>